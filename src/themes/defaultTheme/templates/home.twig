{% extends 'layout.twig' %}

{% block content %}
<div class="container mx-auto px-4">
    <header class="mb-8">
        <h2 class="text-4xl font-bold mb-4">Welcome to {{ site_name }}</h2>
        <p class="text-lg mb-6">This is a sample page using ElegantGlacier with Tailwind CSS.</p>
    </header>

    <section class="mb-12">
        <h3 class="text-2xl font-semibold mb-4">Latest Posts</h3>
        <ul class="list-disc pl-5">
            {% for post in latest_posts %}
                <li class="mb-2">
                    <a href="/posts/{{ post.ID }}" class="text-blue-500 hover:text-blue-700">{{ post.post_title }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>

    <section>
        <h3 class="text-2xl font-semibold mb-4">Latest Pages</h3>
        <ul class="list-disc pl-5">
            {% for page in latest_pages %}
                <li class="mb-2">
                    <a href="/pages/{{ page.ID }}" class="text-blue-500 hover:text-blue-700">{{ page.post_title }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>
</div>
{% endblock %}
